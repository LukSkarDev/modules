<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.eclipse.org/gemini/blueprint/schema/blueprint http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/*.xml"/>

    <osgi:service ref="encounterService" interface="org.motechproject.openmrs18.service.OpenMRSEncounterService"/>
    <osgi:service ref="facilityService" interface="org.motechproject.openmrs18.service.OpenMRSFacilityService"/>
    <osgi:service ref="patientService" interface="org.motechproject.openmrs18.service.OpenMRSPatientService"/>
    <osgi:service ref="userService" interface="org.motechproject.openmrs18.service.OpenMRSUserService"/>
    <osgi:service ref="observationService" interface="org.motechproject.openmrs18.service.OpenMRSObservationService"/>
    <osgi:service ref="implReqAdapter" interface="org.motechproject.openmrs18.service.OpenMRSImplReqAdapter"/>
    <osgi:service ref="conceptService" interface="org.motechproject.openmrs18.service.OpenMRSConceptService"/>

    <osgi:reference id="configurationServiceOsgi" interface="org.motechproject.config.service.ConfigurationService" />

    <osgi:reference id="eventListenerRegistryServiceOsgi" interface="org.motechproject.event.listener.EventListenerRegistryService"/>

    <osgi:reference id="eventRelayOsgi" interface="org.motechproject.event.listener.EventRelay" />
</beans>
