	<name>MOTECH Hub</name>
	<description>MOTECH Hub</description>
	<packaging>bundle</packaging>

	<properties>
		<modules.root.dir>${basedir}/..</modules.root.dir>
		<javax.persistence.version>2.1.0</javax.persistence.version>
	</properties>

	<build>
		<!-- <finalName>motech-platform-hub</finalName> -->
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Blueprint-Enabled>true</Blueprint-Enabled>
						<Context-Path>hub</Context-Path>
						<Resource-Path>hub/resources</Resource-Path>
						<Export-Package>
							org.motechproject.hub.service;version=${project.version},
							org.motechproject.hub.mds;version=${project.version},
							org.motechproject.hub.mds.service;version=${project.version},

							org.motechproject.hub.mds.service.impl;version=${project.version},
							org.motechproject.hub.exception;version=${project.version},
							org.motechproject.hub.model;version=${project.version},
							org.motechproject.hub.service.impl;version=${project.version}
						</Export-Package>
						<Import-Package>

							org.springframework.web.servlet.config,
							org.apache.commons.dbcp,
							org.apache.commons.lang,
							org.springframework.util,
							org.springframework.beans.factory.config,
							<!-- org.springframework.orm.hibernate4, -->
							org.springframework.web.client,
							org.springframework.http.client,
							org.springframework.context.config,
							org.eclipse.gemini.blueprint.config,
							javax.persistence,
							javax.servlet.http,
							javax.xml.bind.annotation,
							javax.validation,
							<!-- org.hibernate, org.hibernate.criterion, -->
							org.motechproject.osgi.web,
							org.springframework.scheduling.quartz,
							org.quartz,
							org.springframework.web.multipart,
							org.springframework.transaction.annotation,
							org.springframework.http,
							org.springframework.stereotype,
							org.springframework.web.bind.annotation,
							javax.annotation,
							org.apache.commons.io,
							org.joda.time,
							<!-- org.hibernate.classic, org.hibernate.validator, -->
							org.springframework.beans.factory.xml,
							javax.validation.bootstrap,
							javax.validation.constraints,
							javax.validation.groups,
							javax.validation.metadata,
							javax.validation.spi,
							!com.googlecode.jtype,
							<!-- org.hibernate.validator.engine, -->
							<!--org.motechproject.commons.date.util, org.motechproject.event.metrics, -->
							org.slf4j,
							org.springframework.beans.factory.annotation,
							org.motechproject.http.agent.service;version=${project.version},
							*
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-bundles</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${user.home}/.motech/bundles</outputDirectory>
							<resources>
								<resource>
									<directory>target</directory>
									<includes>
										<include>*.jar</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- <plugin> <groupId>org.apache.maven.plugins</groupId> <artifactId>maven-war-plugin</artifactId> 
				<version>2.1.1</version> <configuration> <webXml>${project.basedir}/src/main/webapp/WEB-INF/web.xml</webXml> 
				<webappDirectory>C:\Servers\apache-tomcat-7.0.52-motech-platform-hub\webapps\motech-platform-hub</webappDirectory> 
				</configuration> </plugin> -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<verbose>true</verbose>
					<fork>true</fork>
					<executable></executable>
					<compilerVersion>1.6</compilerVersion>
				</configuration>
			</plugin>
		</plugins>
	</build>

